{
  "name": "docucapture",
  "version": "1.0.0",
  "description": "A free desktop application that helps you create professional step-by-step documentation by capturing screenshots",
  "main": "dist/main/index.js",
  "scripts": {
    "build:renderer": "webpack --mode production",
    "build:main": "tsc --project tsconfig.main.json",
    "build:preload": "tsc --project tsconfig.preload.json",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "start": "npm run build && electron .",
    "dev": "webpack --mode development && npm run build:main && npm run build:preload && NODE_ENV=development electron .",
    "test": "echo \"No tests specified\" && exit 0",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pandkd/docucapture.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.docucapture.app",
    "productName": "DocuCapture",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  },
  "bugs": {
    "url": "https://github.com/pandkd/docucapture/issues"
  },
  "homepage": "https://github.com/pandkd/docucapture#readme",
  "devDependencies": {
    "@types/node": "^25.2.2",
    "css-loader": "^7.1.3",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "html-webpack-plugin": "^5.6.6",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.105.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  },
  "dependencies": {
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
